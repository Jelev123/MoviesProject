@using Movies.Core.ViewModels.Movie
@model AddMovieViewModel


<div class="container-fluid pb-video-container">
    <div class="col-md-10 col-md-offset-1">
        <div class="row pb-row">
            @foreach (var item in Model.Gallery)
            {
                <div class="col-md-3 pb-videoca">
                <h4>@item.VideoName</h4>
                     <video controls="controls" class="pb-video-frame" src="@item.MovieVideo"  width="100%" height="200" frameborder="0" allowfullscreen />
                    <track label="Bulgarian" kind="subtitles" srclang="bg" src="@item.MovieSubs" />
                </div>
            }
        </div>
    </div>
</div>

<style>
    .pb-video-container {
        padding-top: 20px;
       
        font-family: Lato;
    }

    .pb-video {
        border: 1px solid #e6e6e6;
        padding: 5px;
    }

        .pb-video:hover {
            background: #F0FFFF;
        }

    .pb-video-frame {
        transition: width 1.5s, height 1.5s;
    }

        .pb-video-frame:hover {
            height: 250px;
        }

    .pb-row {
        margin-bottom: 10px;
    }
</style>

