@using Movies.Core.ViewModels
@model PagingViewModel

<ul class="pagination justify-content-center">
    <li class="page-item">
        @if (Model.HasPreviousPage)

        {

            <a class="page-link absolute" asp-action="AllMovie" asp-route-id="@Model.PreviousPageNumber">Prev</a>
        }
    </li>
    @for (int i = Model.PageNumber - 4; i < Model.PageNumber; i++)
    {
        if (i > 0)
        {
            <li class="page-item"><a class="page-link" asp-action="AllMovie" asp-route-id="@i">@i</a></li>
        }
    }
    <li class="page-item absolute" aria-current="page">
        <span style="color:white" class="page-link">
            @Model.PageNumber
            <span class="sr-only">(current)</span>
        </span>
    </li>
    @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 4; i++)
    {
        if (i <= Model.PagesCount)
        {
            <li class="page-item"><a class="page-link" asp-action="AllMovie" asp-route-id="@i">@i</a></li>
        }
    }
    <li class="page-item">

        @if (Model.HasNextPage)
        {
            <a class="page-link absolute" asp-action="AllMovie" asp-route-id="@Model.NextPageNumber">Next</a>

        }
    </li>
</ul>
