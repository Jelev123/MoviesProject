@using Movies.Core.ViewModels.Movie
@model IEnumerable<AddMovieViewModel>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="cold-md-4">
            <div class="card-body">
                <section class="p-0">
                    <div class="card-body">
                        <div class="col">
                                <a asp-action="GetMovieById" asp-controller="Movie" class="btn" asp-route-id="@item.MovieId">
                                    <img width="200px"  src="@item.CoverPhoto" alt="@item.MovieName">
                                </a>
                                <p>@item.MovieName</p>
                                <p>Genre: @item.GenreName</p>
                                <p>Country: @item.Country</p>
                                <p>Actors: @item.Actor</p>
                                <p>Director: @item.Director</p>
                                <p>Year: @item.Year</p>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    }
</div>

