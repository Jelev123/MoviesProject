@using Movies.Core.ViewModels.Movie
@model AddMovieViewModel

<div class="col-10">
    <div>
        <form method="post" enctype="multipart/form-data" asp-controller="Movie" asp-action="AddMovie">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="MovieName"></label>
                    <input asp-for="MovieName" class="form-control" />
                    <span asp-validation-for="MovieName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreName"></label>
                <select class="form-control text-primary" id="genres" asp-for="GenreName">
                    <option selected disabled><------></></option>
                    @foreach (var genre in (IEnumerable<AddMovieViewModel>)this.ViewData["genres"])
                    {
                        <option value="@genre.GenreName">@genre.GenreName</option>
                    }
                </select>
                </div>
                <div class="form-group">
                    <label asp-for="Country"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VideoFiles"></label>
                    <input asp-for="VideoFiles" class="form-control" />
                    <span asp-validation-for="VideoFiles" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MovieSubs"></label>
                    <input asp-for="MovieSubs" class="form-control" />
                    <span asp-validation-for="MovieSubs" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="CoverPhoto"></label>
                    <input asp-for="CoverPhoto" class="form-control" />
                    <span asp-validation-for="CoverPhoto" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Actor"></label>
                    <input asp-for="Actor" class="form-control" />
                    <span asp-validation-for="Actor" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Director"></label>
                    <input asp-for="Director" class="form-control" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>
                  <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </div>   
        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-primary font-weight-bold">Add Movie</button>
        </div>
        </form>
        <div />
    </div>
</div>

